@model Product

@{
    ViewData["Title"] = "ProductEdit";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="ProductEdit" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" value="@Model.ProductId" readonly="readonly"/>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" value="@Model.ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" value="@Model.Cost" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="@Model.Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UnitInStock" class="control-label"></label>
                <input asp-for="UnitInStock" class="form-control" value="@Model.UnitInStock">
                <span asp-validation-for="UnitInStock" class="text-danger"></span>
            </div>

            @*<div class="form-group form-check">
                <label asp-for="Discount" class="form-check-label">
                    <input type="checkbox" asp-for="Discount" class="form-check-input" value="@Model.Discount" />Discount
                </label>
            </div>*@

            <div class="checkbox">
                <input asp-for="Discount" />
                <label asp-for="Discount" value="@Model.Discount"></label>
            </div>

            <div class="form-group">
                <label asp-for="LaunchDate" class="control-label"></label>
                <input asp-for="LaunchDate" class="form-control" value="@Model.LaunchDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="LaunchDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
